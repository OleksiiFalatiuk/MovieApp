<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMovieList"
    android:background="@color/background">


    <FrameLayout
        android:id="@+id/movie"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/bg"
        >


        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="166dp"
            android:layout_height="248dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_alignParentTop="true"
            >
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/avengers"
            android:foreground="@drawable/mask_new"
            />

        <RelativeLayout
            android:id="@+id/pg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            >
            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rectangle" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="1dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/_13"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pg123"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="144dp"
            android:layout_marginRight="6dp"
            >

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="16sp"
                android:layout_height="14sp"
                app:srcCompat="@drawable/ic_baseline_favorite_24"
                android:alpha="0.75"
                />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tagline"
                android:layout_width="147dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="214dp"
                >

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="147dp"
                    android:layout_height="12dp"
                    android:textSize="8sp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/pink"
                    android:text="@string/tag" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reviews"
                android:layout_width="107dp"
                android:layout_height="12dp"
                android:layout_marginRight="53dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="228dp"
                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />
                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />
                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />
                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    app:srcCompat="@drawable/ic_star_grey" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:paddingLeft="3dp"
                    android:fontFamily="@font/roboto_black"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/_125_reviews"
                    android:textColor="#6D6D80"
                    android:textSize="8sp" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/name_min"
            android:layout_width="154dp"
            android:layout_height="32dp"
            android:layout_marginTop="256dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"

            >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="138dp"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/avengers_end_game"
                android:textColor="@color/white_grey" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="154dp"
                android:layout_height="12dp"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_black"
                android:gravity="center_vertical"
                android:text="@string/_137_min"
                android:textSize="8sp"
                android:textColor="@color/grey"
                android:textStyle="normal" />
        </RelativeLayout>




    </FrameLayout>

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="16dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_my_location_24" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:text="@string/movie_list"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingLeft="5dp"/>
    </LinearLayout>

</FrameLayout>